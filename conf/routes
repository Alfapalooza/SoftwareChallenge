# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.SoftwareChallengeController.index
GET     /index                      controllers.SoftwareChallengeController.index
POST    /search                     controllers.SoftwareChallengeController.sentiments

# WS
GET     /ws/search/:input           controllers.SoftwareChallengeWSController.search(input: String)

# Map static resources from the /public folder to the /assets URL path
GET     /                           controllers.Assets.at(path="/public/html", file="index.scala.html")
GET     /index                      controllers.Assets.at(path="/public/html", file="index.scala.html")
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
